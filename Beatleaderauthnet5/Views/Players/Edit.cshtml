            </div>
            <div class="form-group">
                <label asp-for="PlayerPlatform" class="control-label"></label>
                <input asp-for="PlayerPlatform" class="form-control" />
                <span asp-validation-for="PlayerPlatform" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modcount" class="control-label"></label>
                <input asp-for="Modcount" class="form-control" />
