                <label asp-for="PlayerName" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountAge" class="control-label"></label>
                <input asp-for="AccountAge" class="form-control" />
                <span asp-validation-for="AccountAge" class="text-danger"></span>
            </div>
