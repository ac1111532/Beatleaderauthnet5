@model Beatleaderauthnet5.Models.Beatmap

@{
    ViewData["Title"] = "Edit Beatmaps";
}

<h1>Edit beatmap</h1>

<h4>Beatmap</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
